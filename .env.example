# Environment Configuration Template for Playwright Tests
# Copy this file to .env and fill in your actual values

# Base URL for tests
BASE_URL=https://demo.playwright.dev/todomvc

# Test configuration
TIMEOUT=30000
HEADLESS=true
SLOW_MO=0

# Browser configuration
BROWSER=chromium
# Options: chromium, firefox, webkit, all

# Test environment
NODE_ENV=test
CI=false

# Viewport settings
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Test data (use fake data for examples)
TEST_EMAIL=test@example.com
TEST_PASSWORD=testpassword123

# API Keys (examples - DO NOT put real keys here)
# API_KEY=your-api-key-here
# SECRET_KEY=your-secret-key-here
# DATABASE_URL=your-database-url-here

# Debugging options
DEBUG=false
TRACE=false
VIDEO=false
SCREENSHOT=only-on-failure

# Retry configuration
RETRIES=2
WORKERS=4

# Report configuration
REPORTER=html
REPORT_OPEN=true

# Custom timeouts
ACTION_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000
EXPECT_TIMEOUT=5000

# Feature flags
ENABLE_EXPERIMENTAL_FEATURES=false
SKIP_FLAKY_TESTS=false

# Playwright specific
PLAYWRIGHT_BROWSERS_PATH=0
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false
